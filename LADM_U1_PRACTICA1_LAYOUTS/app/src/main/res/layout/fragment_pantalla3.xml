<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_p3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal"
            android:layout_marginBottom="190dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@color/verdeOscuroP3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="00:08 / 03:34"
                android:textColor="@color/blancoLigero"
                android:textSize="40sp"
                android:gravity="center"
                android:background="@color/grisOscuro"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/icono_reload"
                    android:backgroundTint="@color/transparente" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-record"
                    android:textSize="15sp"
                    android:textColor="@color/blancoLigero"/>
            </LinearLayout>


            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/icono_pausa"
                android:backgroundTint="@color/transparente"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:layout_gravity="right">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/icono_flecha_der"
                    android:backgroundTint="@color/transparente"
                    android:rotation="-90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Step"
                    android:textSize="15sp"
                    android:textColor="@color/blancoLigero"/>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>

</ScrollView>