<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pantalla7"
        android:paddingBottom="25dp">

        <ImageView
            android:id="@+id/imagen_p7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rincon_de_guayabitos"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:id="@+id/titulo_p7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/imagen_p7"
            android:background="@drawable/esq_superiores_redondeadas"
            android:layout_marginTop="-20dp"
            android:paddingHorizontal="25dp"
            android:paddingTop="32dp"
            android:paddingBottom="5dp"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rincon de "
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Guayabitos"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/texto_descripcion_p7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our adventures are as individual as the people who
take them, with destinations, themes and experiences adventures"
            android:layout_below="@id/titulo_p7"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:paddingHorizontal="25dp"
            android:textColor="@color/etiquetaGrisLight"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto_descripcion_p7"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- ITEM 18 JUL -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/borde_rojo_esq_redondeadas" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Jul"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="18"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- ITEM 30 JUL -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/esq_redondeadas"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/negroLigero">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Jul"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blancoLigero"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="30"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/blancoLigero"/>
                </LinearLayout>

                <!-- ITEM ... -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/esq_redondeadas"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="@color/rojo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="..."
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/blancoLigero"/>
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>